{
  "compilerOptions": {
    "noEmit": true,
    "module": "commonjs",
    "target": "esnext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "declaration": true,
    "resolveJsonModule": true,
    "paths": {
      "*": ["node_modules/*", "types/*"]
    }
  },
  "include": ["src/**/*", "types"],
  "ts-node": {
    "transpileOnly": true
  }
}
